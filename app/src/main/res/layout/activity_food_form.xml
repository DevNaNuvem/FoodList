<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/activity_food_form_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Nome"
        android:inputType="textAutoCorrect"
        ></EditText>

    <EditText
        android:id="@+id/activity_food_form_number_of_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Numero de ingredientes"
        android:inputType="number"
        ></EditText>

    <EditText
        android:id="@+id/activity_food_form_number_of_steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Numero de Passos para preparo"
        android:inputType="number"
        ></EditText>

    <Button
        android:id="@+id/activity_food_form_save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar"
        >
    </Button>

</LinearLayout>